APP_ENV=production
APP_DEBUG=false

# SQLite database path
DB_PATH=/workspace/storage/app.db

# Infobip SMS credentials
INFOBIP_BASE_URL=8kje8e.api.infobip.com
INFOBIP_API_KEY=replace-with-real-api-key
INFOBIP_SENDER=

# Agency login (security)
AGENCY_CODE=your-agency-code
# You can set either a plaintext password (only for first run) or a password hash
# If AGENCY_PASSWORD_HASH is empty and AGENCY_PASSWORD is provided, the app will hash and store it on first run
AGENCY_PASSWORD=
AGENCY_PASSWORD_HASH=

# Security
SESSION_NAME=insure_session
CSRF_SECRET=random-long-secret-string

# Business rules
EXPIRY_WINDOW_DAYS=10
IGNORE_POLICIES_BEFORE_YEAR=2021